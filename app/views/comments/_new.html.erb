<div class="header-agora">
  <i class="fas fa-comments"></i>
  <h2 class='ml-30'>Agora</h2>
</div>

<div class="forum w-100">
  <div class="forum-card w-50">
    <div class="title-argument">
      <div class="vote-argument">
        <h3>Arguments <strong>pour</strong> </h3>
        <i class="fas fa-vote-yea">  <%= @law.get_upvotes.size %></i>
      </div>
      <%= link_to for_law_path(@law), class: "like", method: :put do %>
          <div class="btn-like for">
            <i class="far fa-thumbs-up"> </i> je suis <strong>pour</strong>
          </div>
          <% end %>
    </div>

      <div class="comments">
     <% if @law.comments.nil? %>
        <p> Envie de dÃ©battre poster un message </p>
       <% else %>
          <% @law.comments.where(voting_status: "Pour").each do |comment| %>
          <p class="mb-2 mt-3">
            <%= comment.user.first_name.capitalize %>
            <%= comment.user.last_name.capitalize %>
          </p>
            <i class="far fa-clock"> <%= comment.user.created_at %> </i>
            <div class="forum-content">
              <%= comment.content %>
            </div>
          <% end %>
        <% end %>
      </div>
   </div>

   <div class="forum-card w-50">

      <div class="title-argument">
        <div class="vote-argument">
          <h3>Arguments <strong>contre</strong></h3>
          <i class="fas fa-vote-yea"></i>  <%= @law.get_downvotes.size %>
        </div>
       <%= link_to against_law_path(@law), class: "like", method: :put do %>
        <div class="btn-like">
          <i class="far fa-thumbs-down"> </i> je suis <strong>contre</strong>
        </div>
        <% end %>
      </div>

        <div class="comments">
           <% @law.comments.where(voting_status: "Contre").each do |comment| %>
            <p class="mb-2 mt-3">
            <%= comment.user.first_name.capitalize %>
            <%= comment.user.last_name.capitalize %>
            </p>
              <i class="far fa-clock"> <%= comment.user.created_at %> </i>
                <div class="forum-content">
                  <%= comment.content %>
                </div>
            <% end %>
        </div>
   </div>
</div>

      <div class="form-login">
        <div class="title-message">
          <i class="fas fa-comment-dots"></i>
          <h2>Poster un message </h2>
        </div>

          <%= simple_form_for [ @law, @comment ], html: {class: 'form-horizontal'} do |f| %>
            <div class="form-inputs">
              <%= f.input :voting_status,
                          collection: Comment::VOTE,
                          label: "Tu es :",
                          as: :radio_buttons,
                          required: true,
                          autofocus: true %>
              <%= f.input :content, label: "Ton message"%>
            </div>
            <div class="form-actions text-center">
              <%= f.submit "Ajouter un commentaire", class: 'btn-blue'%>
            </div>
          <% end %>
      </div>



