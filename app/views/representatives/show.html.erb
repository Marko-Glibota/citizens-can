<div class="banner_pages">
  <%= render 'shared/navbar' %>
  <ul>
  </ul>
</div>

<div class="container-grid">
  <h1 class="centered grey margin-t-40 margin-b-40">Fiche Député</h1>
  <%= render 'shared/grid_show_representatives' %>
</div>

<div class="container">
<h3 class="centered grey margin-t-40 margin-b-40 title-3">Propositions déposées</h3>
  <% @laws.first(6).each do |law|%>
    <%= render 'shared/card_law', law: law %>
  <% end %>
</div>

<div class="contact_container">
  <div class="contact_form">
    <h3 class="margin-b-40">Envoyer un message à <%= @representative.first_name %> <%= @representative.last_name %></h3>
    <%= render 'shared/rep_contact_form' %>
  </div>
  <div class="contact_info">
    <h3 class="margin-b-40">Informations de contact</h3>
    <p><i class="fas fa-envelope"></i> <%= @representative.email %></p>
    <p><i class="fas fa-phone-alt"></i> 05 62 68 09 55</p>
    <hr>
    <p><%= @representative.addresses[0] %></p>
  </div>
</div>



