<div class="general-law">
    <div class="description-law">
      <h2><%= @law.title %></h2>
      <div class="law-author">
        <% if @law.author_type == "auteur" %>
          <p><%= @law.source %> déposée par <%= @law.author%></p>
        <% elsif @law.author_type == "rapporteur" %>
          <p><%= @law.source %>, rapporteur : <%= @law.author%></p>
        <% else %>
        <% end %>
        <a href="<%= @law.url %>" target="_blank"><i class="fas fa-search"></i> Consulter</a>
      </div>
      <p><%= @law.description %>.</p>
    </div>

  <% if current_user %>
   <div class="card-depute">
        <h3 class="mb-3">Interpelle ton député</h3>
        <%= image_tag "https://www.nosdeputes.fr/depute/photo/#{current_user.district.representative.slug}/250", alt: "Photo député", width: 100, class: "avatar-depute" %>
        <p class="m-top-10"> <strong><%= current_user.district.representative.first_name %> <%= current_user.district.representative.last_name %> </p></strong>
        <p class="m-0"> Son parti : <strong><%= current_user.district.representative.party_acronym %></strong> </p>
        <p class="m-0"> Son département : <strong><%= current_user.district.representative.department_name %></strong></p>
        <%= link_to 'Contacter', representative_path(current_user.district.representative), :class => "btn-blue" %>
   </div>
    <% else %>
    <% end %>
</div>




